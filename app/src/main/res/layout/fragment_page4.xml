<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yoma.maths2.Fragments.Page4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/textVie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:fontFamily="sans-serif"
            android:textAlignment="center"
            android:padding="4dp"
            android:text="Programme 1"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/step"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:textColor="#000"
            android:padding="4dp"
            android:text="Number Grouping and Arrangement"
            android:gravity="center"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:textColor="#000"
            android:padding="4dp"
            android:text="Learning outcomes:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:textColor="#000"
            android:padding="4dp"
            android:text="At the end of this programme you will be able to;\n   * Group numbers under Thousands, Hundreds,Tens and Units.\n  *Arrange numbers under Thousands, Hundreds, Tens and Units\n   * Understand the use of insignificant zeroes "
            android:textSize="18sp"
            android:textStyle="bold" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/nextbutton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/button"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:text="next" />

        <Button
            android:id="@+id/previousbutton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="150dp"
            android:background="@drawable/button"
            android:layout_height="50dp"
            android:layout_gravity="bottom|start"
            android:elevation="3dp"
            android:layout_margin="16dp"
            android:text="previous"
            android:visibility="gone" />
    </FrameLayout>
    </LinearLayout>
</ScrollView>
