<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yoma.maths2.Fragments.Page5">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:padding="4dp"
            android:text="Introduction"
            android:textSize="23sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/text_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:textColor="#000"
            android:fontFamily="sans-serif"
            android:padding="4dp"
            android:elevation="5dp"
            android:text="Number grouping and arrangement is a mathematical tool needed for the proper understanding of the umber system and basic operation which are treated in programme 2 and 3 respectively. Number grouping may look familiar or common to you; therefore, you may be tempted to overlook it. i encourage you to go through it diligently. there are some silent points i shared in this programme. Besides, it is a short one. "
            android:textSize="20sp" />



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/nextbutton"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/button"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="16dp"
                android:elevation="3dp"
                android:text="Next"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/alcPreviousButton"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="150dp"
                android:background="@drawable/button"
                android:layout_height="50dp"
                android:layout_gravity="bottom|start"
                android:layout_margin="16dp"
                android:elevation="3dp"
                android:text="Previous"
                android:textAllCaps="false"
                android:visibility="gone" />

        </FrameLayout>


    </LinearLayout>
</ScrollView>
