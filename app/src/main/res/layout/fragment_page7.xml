<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.yoma.maths2.Fragments.Page7">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:fontFamily="sans-serif"
        android:padding="4dp"
        android:text="Numbers from 1 to 9 are not up to ten and are groped under units. We can tell how may units(ones) are in them "
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:fontFamily="sans-serif"
        android:padding="4dp"
        android:text="Numbers from 10 to 99 are not up to hundred and are grouped in tens and units. We can tell how many tens and units are in them. "
        android:textSize="20sp" />


    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:fontFamily="sans-serif"
        android:padding="4dp"
        android:text="Numbers from 100 to 999 are not up to a thousand and are grouped in hundreds, tens and units. We can tell how many hundreds,tens and units are in them."
        android:textSize="20sp" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/nextbutton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/button"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:text="next" />

        <Button
            android:id="@+id/previousbutton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="150dp"
            android:background="@drawable/button"
            android:layout_height="50dp"
            android:layout_gravity="bottom|start"
            android:elevation="3dp"
            android:layout_margin="16dp"
            android:text="previous"
            android:visibility="gone" />
    </FrameLayout>


</LinearLayout>
