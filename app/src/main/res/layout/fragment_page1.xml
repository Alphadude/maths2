<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yoma.maths2.Main">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:id="@+id/frag_activity"
        android:layout_height="match_parent"
        tools:context="com.example.yoma.maths2.Fragments.Page1">

        <TextView
            android:id="@+id/textVie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:fontFamily="sans-serif"
            android:textAlignment="center"
            android:padding="4dp"
            android:text="Vun Junior School Maths \nPart 1\n(Age 8-13)"
            android:textSize="20sp" />


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/mat"
            app:civ_border_width="2dp"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:civ_border_color="#FF000000"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:fontFamily="sans-serif"
            android:padding="4dp"
            android:text="Vun Junior School Maths App is a self-studying mathematics app that helps you become good at maths with so much ease and fun!"
            android:textSize="20sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/nextbutton"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/button"
                android:layout_gravity="bottom|end"
                android:layout_margin="16dp"
                android:text="next" />

            <Button
                android:id="@+id/previousbutton"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="150dp"
                android:background="@drawable/button"
                android:layout_height="50dp"
                android:layout_gravity="bottom|start"
                android:elevation="3dp"
                android:layout_margin="16dp"
                android:text="previous"
                android:visibility="gone" />
        </FrameLayout>

    </LinearLayout>


</LinearLayout>