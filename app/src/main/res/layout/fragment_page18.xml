    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="3dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:fontFamily="sans-serif"
        android:padding="4dp"
        android:text="You may surprised to see numbers like: 0102, 0051, 0007. We are just refering to 102, 51, and 7. So if zeroes begin a number, those zeroes are insignificant (meaningless to say) until you get a non-zero number. For example, a number like 105 can be written as 0000105, 00105 or 0105"
        android:textSize="20sp" />


    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:fontFamily="sans-serif"
        android:padding="4dp"
        android:text="Numbers from 100 to 999 are not up to a thousand and are grouped in hundreds, tens and units. We can tell how many hundreds,tens and units are in them."
        android:textSize="20sp" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/nextbutton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/button"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:text="next" />

        <Button
            android:id="@+id/previousbutton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="150dp"
            android:background="@drawable/button"
            android:layout_height="50dp"
            android:layout_gravity="bottom|start"
            android:elevation="3dp"
            android:layout_margin="16dp"
            android:text="previous"
            android:visibility="gone" />
    </FrameLayout>
