<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yoma.maths2.Fragments.Page12">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        tools:context="com.rudigo.android.maths.BeginnerLevelCounting">


        <TextView
            android:id="@+id/body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="sans-serif"
            android:textColor="#000"
            android:padding="4dp"
            android:text="Before we take an exercise in number grouping, let us learn how to group numbers less than one thousand in Th,H,T and U. For instance, if you are given number 5. Ordinarily, we group 5 as 5 units (5U). But 5 can be also grouped in Th,H,T and U a shown below:"
            android:textSize="18sp" />


        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp">

            <TableRow>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:text="5"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:text="="
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:text="0TH"
                    android:textSize="18sp" />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:text="0H"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:text="0T"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:text="5U"
                    android:textSize="18sp" />

            </TableRow>
            <TableRow>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:text=""
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/b2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:text="="
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/b3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:text="0x1000"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/b4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:text="+ 0x100"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:text="+0x10"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:text="+ 5x1"
                    android:textSize="18sp" />

            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text=""
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/c2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:text="="
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/c3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:text="0"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/c4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:text="+ 0"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:text="+0"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:text="+5"
                    android:textSize="18sp" />

            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/d1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:text=""
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/d2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:text="="
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/d3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="sans-serif"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:text="5"
                    android:textSize="18sp" />

            </TableRow>

        </TableLayout>

        <TextView
            android:id="@+id/body2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_marginBottom="4dp"
            android:fontFamily="sans-serif"
            android:padding="4dp"
            android:text="This means that in 5, there are no thousands, no hundred, no tens, but only 5 units. Then 5 could also be write as 0005. The three zeros are insignificant zeroes because they can be removed and the value of the number will not be affected."
            android:textSize="18sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/nextbutton"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/button"
                android:elevation="3dp"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="16dp"
                android:text=""
                android:textAllCaps="false" />

            <Button
                android:id="@+id/Previous53"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="150dp"
                android:background="@drawable/button"
                android:elevation="3dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|start"
                android:layout_margin="16dp"
                android:text="Previous"
                android:textAllCaps="false"
                android:visibility="visible" />

        </FrameLayout>


    </LinearLayout>

</ScrollView>
