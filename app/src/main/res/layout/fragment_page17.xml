<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yoma.maths2.Fragments.Page17">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:fontFamily="sans-serif"
            android:padding="4dp"
            android:text="Step 4 :"
            android:textSize="23sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/text_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:textColor="#000"
            android:fontFamily="sans-serif"
            android:padding="4dp"
            android:elevation="5dp"
            android:text="Take the remaining numbers, group them by heart and arrange them under second number. Then press the next button to see how wel you did."
            android:textSize="20sp" />



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/nextbutton"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/button"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="16dp"
                android:elevation="3dp"
                android:text="Next"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/alcPreviousButton"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="150dp"
                android:background="@drawable/button"
                android:layout_height="50dp"
                android:layout_gravity="bottom|start"
                android:layout_margin="16dp"
                android:elevation="3dp"
                android:text="Previous"
                android:textAllCaps="false"
                android:visibility="gone" />

        </FrameLayout>


    </LinearLayout>

</ScrollView>
